<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartConstructionSite.Core.Common.MyPicker"
             VerticalOptions="Start">
    <ContentView.GestureRecognizers>
        <TapGestureRecognizer Tapped="Handle_Tapped"></TapGestureRecognizer>
    </ContentView.GestureRecognizers>
    <ContentView.Content>
        <Frame OutlineColor="#ccc" CornerRadius="0" Padding="5">
            <StackLayout Orientation="Horizontal">
                <Label x:Name="label" LineBreakMode="NoWrap" VerticalOptions="Center" HorizontalOptions="FillAndExpand"></Label>
                <Image Source="playback_more_down.png" WidthRequest="12" HeightRequest="12" VerticalOptions="Center"></Image>
            </StackLayout>
        </Frame>
    </ContentView.Content>
</ContentView>
