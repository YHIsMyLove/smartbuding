<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SmartConstructionSite.Events.EventListPage"
    Title="日历事件">
	<ContentPage.Content>
        <ListView ItemsSource="{Binding Meetings}" HasUnevenRows="True" RowHeight="-1" ItemTapped="ListView_ItemTapped">
            <ListView.Header>
                <DatePicker></DatePicker>
            </ListView.Header>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Padding="4">
                            <Label Text="{Binding Name}" VerticalOptions="Center"></Label>
                            <StackLayout Orientation="Vertical" HorizontalOptions="EndAndExpand">
                                <Label Text="{Binding Compere.Name, StringFormat='会议主持人：{0}'}" HorizontalOptions="End"></Label>
                                <Label Text="{Binding Time, StringFormat='{0:yyyy/MM/dd}'}" FontSize="Micro" HorizontalOptions="End" VerticalOptions="End"></Label>
                            </StackLayout>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
	</ContentPage.Content>
</ContentPage>
