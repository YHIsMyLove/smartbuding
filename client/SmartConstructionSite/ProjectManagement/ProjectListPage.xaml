<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartConstructionSite.ProjectManagement.ProjectListPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <StackLayout Orientation="Horizontal">
                <Picker Title="选择省" ItemsSource="{Binding Provinces}" SelectedItem="{Binding SelectedProvince}"></Picker>
                <Picker Title="选择市" ItemsSource="{Binding Cities}" SelectedItem="{Binding SelectedCity}"></Picker>
            </StackLayout>
            <ListView ItemsSource="{Binding Projects}" SelectedItem="Binding SelectedProject" VerticalOptions="FillAndExpand"></ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>