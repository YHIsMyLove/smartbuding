<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartConstructionSite.ProjectManagement.ProjectManagementMainPage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="White" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Spacing="0">
            <StackLayout Orientation="Vertical" HeightRequest="150" BackgroundColor="#2196F3" Padding="10">
                <StackLayout Orientation="Vertical" VerticalOptions="EndAndExpand">
                    <StackLayout Orientation="Horizontal">
                        <Label Text="工地项目助手" FontSize="Large"  TextColor="White"></Label>
                        <Label Text="1.0V" TextColor="White" VerticalOptions="End"></Label>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal">
                        <Button x:Name="btnChangeProject" Text="湖北省|黄石《中建八局黄石奥体中心项目》" FontSize="Micro"  TextColor="White" BackgroundColor="#2196F3" Clicked="Handle_Clicked"></Button>
                        <!--                    <Label Text="3/12摄氏度" HorizontalOptions="End"></Label>-->
                    </StackLayout>
                </StackLayout>
            </StackLayout>
            <BoxView Color="#ccc" HeightRequest="1"></BoxView>
            <StackLayout Orientation="Horizontal" HeightRequest="40">
                <Label Text="消息" VerticalOptions="Center"></Label>
            </StackLayout>
            <BoxView Color="#ccc" HeightRequest="1"></BoxView>
            <Grid VerticalOptions="FillAndExpand" RowSpacing="0" ColumnSpacing="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Button Grid.Row="0" Grid.Column="0" x:Name="btnSceneMgr" Image="icon.png" Text="现场监管" Clicked="Handle_Clicked"></Button>

                <Button Grid.Row="0" Grid.Column="1" x:Name="btnPeopleMgr" Image="icon.png" Text="人员监管" Clicked="Handle_Clicked"></Button>

                <Button Grid.Row="0" Grid.Column="2" x:Name="btnEnvMgr" Image="icon.png" Text="环境监管" Clicked="Handle_Clicked"></Button>

                <Button Grid.Row="1" Grid.Column="0" x:Name="btnDevMgr" Image="icon.png" Text="机械设备监测" Clicked="Handle_Clicked"></Button>

                <Button Grid.Row="1" Grid.Column="1" x:Name="btnEvents" Image="icon.png" Text="日历事件" Clicked="Handle_Clicked"></Button>

                <Button Grid.Row="1" Grid.Column="2" x:Name="btnProductionMgr" Image="icon.png" Text="生产管理" Clicked="Handle_Clicked"></Button>

                <Button Grid.Row="2" Grid.Column="0" x:Name="btnSpecialTaskCheck" Image="icon.png" Text="特种作业审批" Clicked="Handle_Clicked"></Button>

                <Button Grid.Row="2" Grid.Column="1" x:Name="btnAssetMgr" Image="icon.png" Text="资产管理" Clicked="Handle_Clicked"></Button>

                <Button Grid.Row="2" Grid.Column="2" x:Name="btnProjectProgress" Image="icon.png" Text="项目进度" Clicked="Handle_Clicked"></Button>

            </Grid>

            <!--<Grid HeightRequest="50" RowSpacing="0" ColumnSpacing="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Button Grid.Row="0" Grid.Column="0" Text="项目管理"></Button>
                <Button Grid.Row="0" Grid.Column="1" Text="人员记录"></Button>
            </Grid>-->
        </StackLayout>
    </ContentPage.Content>
</ContentPage>