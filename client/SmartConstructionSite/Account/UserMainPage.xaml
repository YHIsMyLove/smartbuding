<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartConstructionSite.Account.UserMainPage"
    Title="用户信息">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <StackLayout Orientation="Vertical" HeightRequest="150">
                <Image Source="{Binding CurrentUser.Photo}" HorizontalOptions="Center" VerticalOptions="Center"></Image>
                <Label Text="{Binding CurrentUser.Username}" HorizontalOptions="Center" VerticalOptions="Center"></Label>
            </StackLayout>
            <BoxView BackgroundColor="#ccc" HeightRequest="1"></BoxView>
            <Button Text="注销" BackgroundColor="Red" VerticalOptions="EndAndExpand" Command="{Binding LogoutCommand}"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>