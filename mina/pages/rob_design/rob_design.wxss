/* pages/rob_design/rob_design.wxss */

.root-container {
  background: #e9e9e9;
}

.time-cell {
  background: #ccc;
  text-align: center;
}

.time-state {
  font-size: 20rpx;
}

.active {
  background: blue;
  color: white;
}

.time-remain {
  font-size: 28rpx;
  text-align: center;
  background: #f5ebe9;
  border-bottom: 1rpx solid #ccc;
  padding: 8rpx;
}

.field-container {
  margin: 8rpx 150rpx;
}

.field-container input {
  margin: 8rpx;
  background: #fff;
}

.houseImage {
  width: 150rpx;
  height: 150rpx;
  background: red;
  margin: 0 auto;
}

.houseImageContainer {
  align-items: center;
}
